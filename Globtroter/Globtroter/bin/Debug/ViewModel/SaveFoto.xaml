<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="Globtroter.ViewModel.SaveFoto"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Globtroter.ViewModel"
    xmlns:common="using:Globtroter.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='4' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,58" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="363*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" HorizontalAlignment="Left" Text="Tytuł:" VerticalAlignment="Top" Height="13" Width="26"/>
            <TextBlock HorizontalAlignment="Left" Text="Data:" VerticalAlignment="Bottom" Height="13" Width="26" Margin="0,0,0,569"/>
            <TextBlock Grid.Row="2" HorizontalAlignment="Left" Margin="58,88,0,0" Text="Grupa" VerticalAlignment="Top" Height="13" Width="30"/>
            <TextBlock Grid.Row="3" HorizontalAlignment="Left" Margin="58,133,0,0" Text="Podgrupa" VerticalAlignment="Top" Height="13" Width="47"/>
            <TextBlock Grid.Row="4" HorizontalAlignment="Left" Margin="58,175,0,0" TextWrapping="Wrap" Text="Lokalizacja" VerticalAlignment="Top" Height="13" Width="52"/>
            <TextBlock Grid.Row="5" HorizontalAlignment="Left" Margin="53,222,0,0" TextWrapping="Wrap" Text="Opis" VerticalAlignment="Top" Height="13" Width="52"/>


            <TextBox x:Name="Name" Text="{Binding}" Grid.Column="1" HorizontalAlignment="Left" Height="13" Margin="61,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274"/>
            <TextBlock x:Name="Data" Text="{Binding}" HorizontalAlignment="Left" Margin="61,48,0,0" VerticalAlignment="Top" Height="13" Width="26"/>
            <TextBlock x:Name="Group" Text="{Binding}" Grid.Column="1" HorizontalAlignment="Left" Margin="58,88,0,0" VerticalAlignment="Top" Height="13" Width="30"/>
            <ComboBox x:ConnectionId='3' SelectedItem="{Binding}" ItemsSource="{Binding}"                                                      x:Name="Subgroup" Grid.Column="1" HorizontalAlignment="Left" Height="13" Margin="58,133,0,0" VerticalAlignment="Top" Width="277"/>
            <TextBlock x:Name="Localization" Text="{Binding}" Grid.Column="1" HorizontalAlignment="Left" Margin="58,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="13" Width="52" />
            <TextBox x:Name="Description" Text="{Binding}" Grid.Column="1" HorizontalAlignment="Left" Margin="61,222,0,0" VerticalAlignment="Top" Height="105" Width="274"/>

            <Image x:Name="_currentFoto" Source="{Binding}" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Width="100" Height="100"/>
        </Grid>

        <Grid VerticalAlignment="Bottom" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='1' Content="Zapisz" Grid.Column="0"  Margin="0,0,0,58"                                  />
            <Button x:ConnectionId='2' Content="Anuluj" Grid.Column="1"  Margin="0,0,0,58"                                    />
            <Button Content="Wyślij" Grid.Column="1" RenderTransformOrigin="1.73,-0.421" Margin="78,0,0,58"  />
            
        </Grid>
        
         
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>



</common:LayoutAwarePage>

